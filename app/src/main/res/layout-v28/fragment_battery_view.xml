<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="batteryFragment"
            type="com.example.powerconsumptionapp.batteryview.BatteryViewFragment" />
        
        <variable
            name="viewModel"
            type="com.example.powerconsumptionapp.model.BatteryViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".batteryview.BatteryViewFragment">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollMenuBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/batteryInfoBttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_margin_buttons"
                    android:background="@drawable/round_shadow_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/default_padding"
                    android:text="@string/info_button_text"
                    android:textColor="@android:color/white"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/batterySaverBttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_margin_buttons"
                    android:background="@drawable/round_shadow_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/default_padding"
                    android:text="Saver"
                    android:textColor="@android:color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/batteryLevelStatisticsBttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_margin_buttons"
                    android:background="@drawable/round_shadow_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/default_padding"
                    android:text="Percentage Statistics"
                    android:textColor="@android:color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/batteryTempStatisticsBttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_margin_buttons"
                    android:background="@drawable/round_shadow_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/default_padding"
                    android:text="Temperature"
                    android:textColor="@android:color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bttn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_margin_buttons"
                    android:background="@drawable/round_shadow_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/default_padding"
                    android:text="secbfes"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/batteryInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontalScrollMenuBattery"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/levelProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp">

                <ProgressBar
                    android:id="@+id/batteryLevelIndicator"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/progress_bar"
                    android:layout_height="@dimen/progress_bar"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/default_margin_top_bottom"
                    android:layout_marginBottom="@dimen/default_margin_top_bottom"
                    android:progressDrawable="@drawable/progressbar_states" />

                <LinearLayout
                    android:id="@+id/progressBarElements"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/batteryLevelIndicator"
                    android:layout_alignTop="@+id/batteryLevelIndicator"
                    android:layout_alignEnd="@+id/batteryLevelIndicator"
                    android:layout_alignBottom="@+id/batteryLevelIndicator"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBatteryPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="@string/percent_format"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <ImageView
                        android:id="@+id/chargingBattery"
                        android:layout_width="38dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/charging_battery"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_baseline_flash_on_24" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timeIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp">

                <ProgressBar
                    android:id="@+id/timeChargingIndicator"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/progress_bar"
                    android:layout_height="@dimen/progress_bar"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/default_margin_top_bottom"
                    android:progressDrawable="@drawable/progressbar_states" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/batterySaverContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontalScrollMenuBattery"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/saverinfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="saver here" />

            <TextView
                android:id="@+id/saverinfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="saver here" />

            <TextView
                android:id="@+id/saverinfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="saver here" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/levelStatisticsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontalScrollMenuBattery"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/saverinfo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/saverinfo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/saverinfo7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
</layout>