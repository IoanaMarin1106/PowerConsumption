<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="oval">
            <stroke
                android:width="5dp"
                android:color="@color/deep_purple_light"
                />
            <solid android:color="#eef2f5"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape
                android:shape="oval">
                <stroke
                    android:width="5dp"
                    android:color="@color/indigo_dark"
                    />
                <gradient
                    android:startColor="@color/deep_purple_dark"
                    android:endColor="@color/deep_purple"
                    android:centerColor="@color/deep_purple_light"
                    android:angle="270"
                    android:gradientRadius="50"
                    android:centerY=".50"
                    />
            </shape>
        </clip>
    </item>
</layer-list>