<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/batteryPercentage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.example.powerconsumptionapp.startfragment.battery.BatteryLevelIndicator
            android:id="@+id/batteryLevelIndicatorView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:borderStrokeSize="2dp"
            app:excellentLevelColor="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066"
            app:lowLevelColor="@color/red"
            app:normalLevelColor="@color/orange"
            tools:percent="45" />

        <Button
            android:id="@+id/showBatteryLevel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Show level"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batteryLevelIndicatorView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Battery Level"
            app:layout_constraintBottom_toBottomOf="@+id/batteryLevelIndicatorView"
            app:layout_constraintEnd_toEndOf="@+id/batteryLevelIndicatorView"
            app:layout_constraintStart_toStartOf="@+id/batteryLevelIndicatorView"
            app:layout_constraintTop_toTopOf="@+id/batteryLevelIndicatorView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>