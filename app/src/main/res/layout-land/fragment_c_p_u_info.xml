<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".cpuinfo.CPUInfoFragment" >

    <data>
        <variable
            name="cpuFragment"
            type="com.example.powerconsumptionapp.cpuinfo.CPUInfoFragment" />
        
        <variable
            name="viewModel"
            type="com.example.powerconsumptionapp.model.CPUViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollCPU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cpuInformationBttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin_buttons"
                android:background="@drawable/round_shadow_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/default_padding"
                android:text="@string/info_button_text"
                android:textColor="@android:color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cpuStatisticsBttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_margin_buttons"
                    android:background="@drawable/round_shadow_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/default_padding"
                    android:text="@string/statistics_button_text"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/cpuInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/horizontalScrollCPU"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/usageCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="7dp">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:columnCount="5"
                        android:rowCount="5"
                        android:useDefaultMargins="true">

                        <TextView
                            android:id="@+id/cpuUsageTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:text="@string/overall_cpu_usage"
                            android:textStyle="bold" />

                        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:padding="2dp"
                            app:rcBackgroundColor="@color/white"
                            app:rcBackgroundPadding="2dp"
                            app:rcMax="100"
                            app:rcProgress="40"
                            app:rcProgressColor="@color/indigo"
                            app:rcRadius="80dp"
                            app:rcSecondaryProgress="100"
                            app:rcSecondaryProgressColor="@color/grey_gainsboro"
                            app:rcTextPositionPriority="outside"
                            app:rcTextProgress="40%"
                            app:rcTextProgressColor="#111111" />

                        <TextView
                            android:id="@+id/cpuTemperatureTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="3"
                            android:layout_columnSpan="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/default_cpu_temp" />

                        <ImageView
                            android:id="@+id/cpuHardwareIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            app:srcCompat="@drawable/baseline_cpu_24" />

                        <TextView
                            android:id="@+id/cpuHardwareTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="@string/cpu_hardware" />

                        <TextView
                            android:id="@+id/cpuHardwareTextViewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:layout_columnSpan="3"
                            android:layout_gravity="center"
                            android:text="Qualcomm Technologies, INC, Kona" />

                        <ImageView
                            android:id="@+id/cpuCoresIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="0"
                            app:srcCompat="@drawable/baseline_cpu_24" />

                        <TextView
                            android:id="@+id/cpuCoresTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="@string/cpu_cores" />

                        <TextView
                            android:id="@+id/cpuCoresTextViewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:layout_columnSpan="3"
                            android:layout_gravity="center"
                            android:text="8" />

                        <ImageView
                            android:id="@+id/cpuFrequencyIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="0"
                            app:srcCompat="@drawable/ic_baseline_ssid_chart_24" />

                        <TextView
                            android:id="@+id/cpuFrequencyTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:text="@string/cpu_frequency" />

                        <TextView
                            android:id="@+id/cpuFrequencyTextViewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:layout_columnSpan="3"
                            android:layout_gravity="center"
                            android:text="1 x 2.84 GHz, 4 x 1.80 GHz, 3,42 GHz" />
                    </GridLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cpuCoresCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="7dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="10"
                        android:rowCount="8"
                        android:useDefaultMargins="true">

                    </GridLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/cpuStatsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/horizontalScrollCPU"
            android:visibility="gone">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPU STATISTICS"/>

        </LinearLayout>
    </RelativeLayout>
</layout>