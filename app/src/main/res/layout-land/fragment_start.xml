<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/batteryPercentage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/progress_bar"
            android:layout_height="@dimen/progress_bar"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="507dp"
            android:layout_marginBottom="@dimen/default_margin_top_bottom"
            android:progressDrawable="@drawable/progressbar_states" />

        <LinearLayout
            android:id="@+id/progressBarElements"
            android:layout_width="169dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/progressBar"
            android:layout_alignTop="@+id/progressBar"
            android:layout_alignEnd="@+id/progressBar"
            android:layout_alignBottom="@+id/progressBar"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/tv_batteryPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="49dp"
                android:layout_marginTop="47dp"
                android:layout_marginBottom="53dp"
                android:gravity="center"
                android:hint="@string/percent_format"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/chargingBattery"
                android:layout_width="38dp"
                android:layout_height="57dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_baseline_battery_charging_full_24"
                android:contentDescription="@string/charging_battery" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFragmentStart"
            android:layout_width="@dimen/recycler_view_width"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="-2dp">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
</layout>
